<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/family_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"/>

<!--    content avatar image-->
    <ImageView
        android:id="@+id/ic_man"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_avatar"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/family_card"
        app:layout_constraintTop_toTopOf="@id/family_card"
        app:layout_constraintBottom_toBottomOf="@id/family_card"/>

    <!--    Family card 1 name content -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ic_man"
        app:layout_constraintTop_toTopOf="@id/family_card"/>


</androidx.constraintlayout.widget.ConstraintLayout>